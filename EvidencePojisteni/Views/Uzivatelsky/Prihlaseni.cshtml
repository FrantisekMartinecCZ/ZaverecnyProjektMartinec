@model EvidencePojisteni.ViewModels.Prihlaseni

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mb-4">Přihlášení</h2>

        <form asp-action="Prihlaseni" method="post" class="p-4 border rounded shadow-sm bg-light">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <div class="input-group">
                  
                    <input asp-for="Email" class="form-control" placeholder="Zadejte svůj email..." />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Heslo" class="form-label">Heslo</label>
                <div class="input-group">
                 
                    <input asp-for="Heslo" type="password" class="form-control" placeholder="Zadejte své heslo..." />
                </div>
                <span asp-validation-for="Heslo" class="text-danger"></span>
            </div>

       

            <button type="submit" class="btn btn-primary w-100">Přihlásit se</button>

           
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
