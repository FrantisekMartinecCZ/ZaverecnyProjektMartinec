@model EvidencePojisteni.Models.PojistnaUdalost

<div class="container mt-5">
    <div class="card shadow-lg p-4 border-danger">
        <!-- Nadpis s ikonou -->
        <h2 class="text-center text-danger">
            <div class="d-flex justify-content-center align-items-center">
                <i class="bi bi-x-circle-fill me-2 text-danger"></i> Smazání pojistné události
            </div>
        </h2>
        <hr>

        <!-- Výstražné upozornění -->
        <div class="alert alert-warning text-center">
            <div class="d-flex justify-content-center align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-2 text-warning"></i>
                <strong>Opravdu chcete smazat tuto pojistnou událost?</strong>
            </div>
        </div>

        <!-- Detaily pojistné události s ikonami -->
        <div class="mb-4">
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-card-text me-2 text-info"></i>
                <strong>Popis:</strong> @Model.Popis
            </div>
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-calendar-day me-2 text-success"></i>
                <strong>Datum události:</strong> @Model.DatumUdalosti.ToShortDateString()
            </div>
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-clock-history me-2 text-warning"></i>
                <strong>Datum nahlášení:</strong> @(Model.DatumNahlaseni.HasValue ? Model.DatumNahlaseni.Value.ToShortDateString() : "Nezadáno")
            </div>
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-cash-stack me-2 text-primary"></i>
                <strong>Odhad škody:</strong> @Model.OdhadSkody Kč
            </div>
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-exclamation-circle-fill me-2 text-danger"></i>
                <strong>Stav:</strong> @Model.Stav
            </div>
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-stickies-fill me-2 text-secondary"></i>
                <strong>Poznámky:</strong> @Model.Poznamka
            </div>
        </div>

        <!-- Ovládací tlačítka -->
        <div class="text-center mt-4">
            <form asp-action="SmazaniUdalosti" method="post">
                <input type="hidden" asp-for="IdPojistnaUdalost" />
                <input type="hidden" asp-for="PojistenecId" />

                <!-- Tlačítko pro smazání -->
                <button type="submit" class="btn btn-danger btn-lg me-2">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-trash-fill me-2"></i> Ano, smazat
                    </div>
                </button>

                <!-- Tlačítko pro zrušení -->
                <a asp-action="Detaily" asp-controller="Pojistenec" asp-route-id="@Model.PojistenecId" class="btn btn-secondary btn-lg">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-arrow-left-circle-fill me-2"></i> Zrušit
                    </div>
                </a>
            </form>
        </div>
    </div>
</div>
